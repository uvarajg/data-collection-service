# Data Collection Service Environment Variables

# Service Configuration
SERVICE_NAME=data-collection-service
SERVICE_PORT=3001
ENVIRONMENT=development
LOG_LEVEL=INFO

# Alpaca API Configuration
ALPACA_API_KEY_ID=your_alpaca_api_key
ALPACA_API_SECRET_KEY=your_alpaca_api_secret
ALPACA_API_BASE_URL=https://paper-api.alpaca.markets
LIVE_ALPACA_API_KEY_ID=your_live_alpaca_key
LIVE_ALPACA_API_SECRET_KEY=your_live_alpaca_secret
LIVE_ALPACA_API_BASE_URL=https://api.alpaca.markets

# Google Sheets Configuration
GOOGLE_API_KEY=your_google_api_key
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=your_private_key
SPREADSHEET_ID=your_spreadsheet_id

# Yahoo Finance Configuration (no API key needed)
YAHOO_FINANCE_ENABLED=true

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL_SECONDS=300

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/data_collection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=data_collection
DB_USER=postgres
DB_PASSWORD=postgres

# Message Queue Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Monitoring Configuration
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Rate Limiting Configuration
RATE_LIMIT_ALPACA_MS=200
RATE_LIMIT_YAHOO_MS=1000
RATE_LIMIT_GOOGLE_MS=100
RATE_LIMIT_GEMINI_MS=500

# Data Quality Thresholds
MIN_DATA_QUALITY_SCORE=0.8
MAX_STALE_DATA_MINUTES=5

# Feature Flags
ENABLE_CACHE=true
ENABLE_FALLBACK=true
ENABLE_SELF_EVOLUTION=false
ENABLE_METRICS=true

# Shared Data Directory
SHARED_DATA_DIR=/workspaces/data